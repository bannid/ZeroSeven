@model PetStore.WebApp.Models.PetViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Edit pet</title>
</head>

<body>
    @foreach (var error in Model.Errors)
    {
        <p style="color: darkred">@error</p>
    }
<form asp-controller="EditPet" asp-action="Update" method="post">
    <input style="display:none" name="ID" value="@Model.ID" />
    <div style="float:left;width:100%">
        <label for="firstName">Name:</label>
        <input type="text" id="firstName" name="Name" value="@Model.Name" />
    </div>
    <div style="float:left;width:100%">
        <label for="dateOfBirth">Date of Birth:</label>
        <input type="text" id="dateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth" />
    </div>
    <div style="float:left;width:100%">
        <label for="weight">Weight:</label>
        <input type="text" id="weight" name="Weight" value="@Model.Weight" />
    </div>
    <div style="float:left;width:100%">
        <label for="type">Type:</label>
        <input type="text" id="type" name="Type" value="@Model.Type" />
    </div>
    <input type="submit" value="Update" />
</form>
    <button onclick="window.location = '/Home'">Cancel</button>
</body>
</html>